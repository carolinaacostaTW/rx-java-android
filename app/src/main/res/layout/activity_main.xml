<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/btnRX00Introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction"/>

        <Button
            android:id="@+id/btnRX01Disposable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disposable"/>

        <Button
            android:id="@+id/btnRX02CompositeDisposable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Composite Disposable"/>

        <Button
            android:id="@+id/btnRX03Operadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operadores"/>
        
    </LinearLayout>
</ScrollView>